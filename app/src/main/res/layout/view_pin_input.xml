<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <TextView android:layout_width="match_parent"
              android:labelFor="@id/tvInputField"
              android:paddingBottom="10dp"
              android:textColor="#000000"
              android:textSize="16sp"
              android:paddingLeft="10dp"
              android:id="@+id/tvLabor"
              android:paddingRight="10dp"
              android:text="@string/app_name"
              android:layout_height="wrap_content"/>

    <EditText
            android:layout_width="match_parent"
            android:background="@drawable/shape_rectangle_blue_border"
            android:id="@+id/tvInputField"
            android:textSize="22sp"
            android:inputType="textNoSuggestions"
            android:textColor="#000000"
            android:textStyle="bold"
            android:gravity="center"
            android:text="@string/app_name"
            android:layout_height="44dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvLabor"/>

    <ImageView
            android:contentDescription="@string/app_name"
            android:id="@+id/statusIcon"
            android:layout_width="20dp"
            android:padding="1dp"
            android:layout_height="20dp"
            app:layout_constraintEnd_toEndOf="@+id/tvInputField"
            android:layout_marginEnd="13dp"
            android:src="@drawable/shape_circle"
            app:layout_constraintBottom_toBottomOf="@id/tvInputField"
            app:layout_constraintTop_toTopOf="@id/tvInputField"/>

    <ProgressBar android:layout_width="20dp"
                 app:layout_constraintEnd_toEndOf="@+id/tvInputField"
                 android:layout_marginEnd="13dp"
                 android:theme="@style/AppTheme.WhiteAccent"
                 android:src="@drawable/shape_circle"
                 app:layout_constraintBottom_toBottomOf="@id/tvInputField"
                 app:layout_constraintTop_toTopOf="@id/tvInputField"
                 style="@style/Widget.AppCompat.ProgressBar"
                 android:layout_height="20dp"/>

    <TextView android:layout_width="match_parent"
              android:labelFor="@id/tvInputField"
              android:textColor="#231f20"
              android:textSize="12sp"
              android:paddingStart="10dp"
              android:textStyle="italic"
              android:lines="2"
              android:id="@+id/tvHint"
              android:paddingEnd="22dp"
              android:text="vanth anh ha vant hanh ha vanth anh ha van"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              app:layout_constraintTop_toBottomOf="@+id/tvInputField" android:layout_marginEnd="8dp"
              app:layout_constraintEnd_toEndOf="parent"/>

    <TextView android:layout_width="match_parent"
              android:labelFor="@id/tvInputField"
              android:textColor="@color/red_50"
              android:textSize="12sp"
              android:paddingStart="10dp"
              android:id="@+id/tvError"
              android:visibility="invisible"
              android:lines="2"
              android:paddingEnd="22dp"
              android:text="@string/app_name"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              app:layout_constraintTop_toBottomOf="@+id/tvInputField"/>

</android.support.constraint.ConstraintLayout>