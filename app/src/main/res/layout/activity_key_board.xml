        android:layout_width="match_parent" android:layout_height="match_parent"
        tools:context="ha.thanh.KeyBoardActivity">

    <ha.thanh.sidebarsmartapp.prgrs.UserNameInputView
            android:id="@+id/userName1"
            android:layout_width="match_parent"
            android:padding="10dp"
            app:input_labor="@string/app_name"
            app:input_hint_message="This is what you like?"
