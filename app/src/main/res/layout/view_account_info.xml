<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:paddingTop="32dp"
        android:paddingEnd="16dp"
        android:paddingStart="8dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        tools:context=".MainActivity">
    <ImageView android:layout_width="26dp"
               android:layout_height="26dp"
               android:layout_margin="8dp"
               android:src="@drawable/ic_group_14"/>
    <LinearLayout android:layout_width="wrap_content"
                  android:orientation="vertical"
                  android:layout_weight="1"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="Saldo saya"
                  android:textSize="11sp"
                  android:layout_height="wrap_content"/>

        <TextView android:layout_width="wrap_content"
                  android:text="Rp12,501,245"
                  android:textSize="15sp"
                  android:textStyle="bold"
                  android:layout_height="wrap_content"/>

        <TextView android:layout_width="wrap_content"
                  android:text="Lihat detil"
                  android:textColor="@color/blue_50"
                  android:textSize="11sp"
                  android:layout_height="wrap_content"/>

    </LinearLayout>

    <ImageView android:layout_width="16dp"
               android:layout_height="16dp"
               android:src="@drawable/ic_reload"
    />
    <View android:layout_width="1dp"
          android:layout_margin="8dp"
          android:layout_height="match_parent"
          android:background="#000000"/>
    <ImageView android:layout_width="26dp"
               android:layout_height="26dp"
               android:src="@drawable/ic_calendar_2"/>
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_weight="1"
                  android:orientation="vertical"
                  android:layout_margin="8dp"
                  android:layout_height="wrap_content">

        <TextView android:layout_width="wrap_content"
                  android:text="Pengeluaran saya"
                  android:textSize="11sp"
                  android:layout_height="wrap_content"/>

        <TextView android:layout_width="wrap_content"
                  android:text="Rp1,824,300"
                  android:textSize="15sp"
                  android:textStyle="bold"
                  android:layout_height="wrap_content"/>


    </LinearLayout>
</LinearLayout>