<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:showIn="@layout/app_bar_main"
        tools:context=".MainActivity">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <View android:layout_width="match_parent"
              android:background="@color/blue_10"
              android:id="@+id/topPanel"
              android:layout_height="50dp">

        </View>

        <ImageView android:layout_width="match_parent"
                   android:layout_marginTop="20dp"
                   app:layout_constraintTop_toTopOf="parent"
                   android:src="@drawable/shape_bend"
                   android:id="@+id/background"
                   android:layout_height="200dp"/>
        <ImageView
                android:id="@+id/button"
                android:contentDescription="@string/app_name"
                android:layout_width="35dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="@id/background"
                android:paddingRight="15dp"
                android:src="@drawable/ic_group_4"/>

        <TextView android:layout_width="wrap_content"
                  app:layout_constraintStart_toEndOf="@id/button"
                  android:id="@+id/tv_message"
                  android:text="Selamat pagi, Cinta!"
                  android:textStyle="bold"
                  app:layout_constraintTop_toTopOf="@id/background"
                  android:textSize="15sp"
                  android:gravity="center"
                  android:layout_height="25dp"/>

        <TextView android:layout_width="wrap_content"
                  android:id="@+id/tv_question"
                  android:gravity="center"
                  app:layout_constraintTop_toBottomOf="@id/tv_message"
                  app:layout_constraintStart_toEndOf="@id/button"
                  android:text="Apa yang bisa kami bantu hari ini?"
                  android:textSize="13sp"
                  android:layout_height="25dp"/>

        <ImageView android:layout_width="70dp"
                   android:layout_height="70dp"
                   android:id="@+id/bag"
                   android:layout_marginTop="80dp"
                   android:src="@drawable/group_10"
                   android:layout_marginRight="25dp"
                   app:layout_constraintTop_toTopOf="@id/background"
                   app:layout_constraintEnd_toEndOf="@id/background"/>


        <LinearLayout android:layout_width="wrap_content"
                      app:layout_constraintTop_toBottomOf="@id/bag"
                      app:layout_constraintStart_toStartOf="@id/bag"
                      app:layout_constraintEnd_toEndOf="@id/bag"
                      android:layout_height="wrap_content">

            <ImageView android:layout_width="10dp"
                       android:layout_height="8dp"
                       android:id="@+id/trophy"
                       android:layout_gravity="center"
                       android:src="@drawable/ic_trophy_2"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="2,768, 345 points"
                      android:textSize="11sp"
                      android:layout_marginStart="3dp"/>
        </LinearLayout>

        <include layout="@layout/view_account_info"
                 android:id="@+id/inl_account_info"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 app:layout_constraintTop_toBottomOf="@id/background"/>

        <include layout="@layout/view_menu_stuffs"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 app:layout_constraintTop_toBottomOf="@id/inl_account_info"/>

    </android.support.constraint.ConstraintLayout>

</ScrollView>