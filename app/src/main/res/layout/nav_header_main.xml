<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue_10"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="90dp"
        android:orientation="vertical">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textStyle="bold"
            android:duplicateParentState="true"
            android:textColor="@color/black_20"
            android:layout_marginStart="45dp"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="Cinta"/>

    <TextView android:layout_width="wrap_content"
              android:text="Alexander"
              android:textSize="18sp"
              android:textColor="@color/black_20"
              android:layout_marginStart="45dp"
              android:layout_height="wrap_content"/>

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:gravity="center_vertical"
                  android:layout_marginTop="25dp"
                  android:paddingStart="41dp"
                  android:layout_height="60dp">

        <ImageView android:layout_width="22dp"
                   android:src="@drawable/ic_home"
                   android:layout_margin="9dp"
                   android:layout_height="22dp"/>

        <TextView android:layout_width="wrap_content"
                  android:text="Home"
                  android:textColor="@color/black_20"
                  android:textSize="18sp"
                  android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:paddingStart="41dp"
                  android:gravity="center_vertical"
                  android:layout_height="60dp">

        <ImageView android:layout_width="22dp"
                   android:src="@drawable/ic_user_2"
                   android:layout_margin="9dp"
                   android:layout_height="22dp"/>

        <TextView android:layout_width="wrap_content"
                  android:text="Profil Saya"
                  android:textColor="@color/black_20"
                  android:textSize="18sp"
                  android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:paddingStart="41dp"
                  android:gravity="center_vertical"
                  android:layout_height="60dp">

        <ImageView android:layout_width="22dp"
                   android:src="@drawable/ic_email"
                   android:layout_margin="9dp"
                   android:layout_height="17dp"/>

        <TextView android:layout_width="wrap_content"
                  android:text="Pesan"
                  android:textSize="18sp"
                  android:textColor="@color/black_20"
                  android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:paddingStart="41dp"
                  android:gravity="center_vertical"
                  android:layout_height="60dp">

        <ImageView android:layout_width="22dp"
                   android:src="@drawable/ic_group_7"
                   android:layout_margin="9dp"
                   android:layout_height="22dp"/>

        <TextView android:layout_width="wrap_content"
                  android:text="Notifikasi"
                  android:textSize="18sp"
                  android:textColor="@color/black_20"
                  android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:paddingStart="41dp"
                  android:textColor="@color/black_20"
                  android:gravity="center_vertical"
                  android:layout_height="60dp">

        <ImageView android:layout_width="22dp"
                   android:src="@drawable/ic_questions_circular_button"
                   android:layout_margin="9dp"
                   android:layout_height="22dp"/>

        <TextView android:layout_width="wrap_content"
                  android:text="FAQ"
                  android:textColor="@color/black_20"
                  android:textSize="18sp"
                  android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:paddingStart="41dp"
                  android:gravity="center_vertical"
                  android:layout_height="60dp">

        <ImageView android:layout_width="40dp"
                   android:src="@drawable/ic_shape"
                   android:padding="9dp"
                   android:textColor="@color/black_20"
                   android:layout_height="40dp"/>

        <TextView android:layout_width="wrap_content"
                  android:text="Log Out"
                  android:textColor="@color/black_20"
                  android:textSize="18sp"
                  android:layout_height="wrap_content"/>

    </LinearLayout>
</LinearLayout>
