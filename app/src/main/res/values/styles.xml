<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ThumbIconStyle" parent="AppTheme">
        <item name="android:button">@null</item>
        <item name="android:layout_width">@dimen/button_size_30</item>
        <item name="android:layout_height">@dimen/button_size_30</item>
        <item name="android:layout_margin">@dimen/padding_4</item>
        <item name="android:checked">false</item>
    </style>

    <style name="AppTheme.WhiteAccent">
        <item name="colorAccent">@color/orange_50</item>
    </style>


    <style name="ProfileItem">
        <item name="android:paddingTop">6dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="ProfileItemLabel">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ProfileItemValue">
        <item name="android:textSize">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>


    <style name="MoreMenuItem">
        <item name="android:paddingTop">14dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="MoreMenuItemLabel">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black_20</item>
    </style>

    <style name="MoreMenuItemValue">
        <item name="android:textSize">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/gray_50</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

</resources>
