<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ThumbIconStyle" parent="AppTheme">
        <item name="android:button">@null</item>
        <item name="android:layout_width">@dimen/button_size_30</item>
        <item name="android:layout_height">@dimen/button_size_30</item>
        <item name="android:layout_margin">@dimen/padding_4</item>
        <item name="android:checked">false</item>
    </style>

    <style name="AppTheme.WhiteAccent">
        <item name="colorAccent">@color/orange_50</item> <!-- Whatever color you want-->
    </style>
</resources>
